<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="info.mattsaunders.apps.dexterous.PreferencesActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Preferences"
        android:id="@+id/pref_header"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Redownload Pokemon sprites"
        android:id="@+id/pref_redownloadSprites"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Backup Pokedex markers"
        android:id="@+id/pref_backupMarkers"
        android:layout_below="@+id/pref_redownloadSprites"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Restore Pokedex markers"
        android:id="@+id/pref_restoreMarkers"
        android:layout_below="@+id/pref_backupMarkers"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Toggle Pokedex markers"
        android:id="@+id/pref_changeMarkers"
        android:layout_below="@+id/pref_restoreMarkers"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="About Dexterous"
        android:id="@+id/pref_aboutApp"
        android:layout_below="@+id/pref_changeMarkers"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true" />

</RelativeLayout>
